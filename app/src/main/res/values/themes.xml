<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Record_Trail" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/light_gray</item>
        <item name="colorOnPrimary">@color/dark_gray</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lime</item>
        <item name="colorSecondaryVariant">@color/lime</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Splash theme. -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/light_gray</item>
        <item name="colorPrimaryDark">@color/light_gray</item>
        <item name="colorAccent">@color/light_gray</item>
        <!-- No Title Bar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- white status bar -->
        <item name="android:statusBarColor">@color/light_gray</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- background -->
        <item name="android:windowBackground">@drawable/splash</item>
    </style>
</resources>